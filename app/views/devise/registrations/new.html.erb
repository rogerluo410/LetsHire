<div class="containersignin">
<br /><br />
<h2>Sign up</h2>
<div class="row req">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

  <div class="sign-control"><%= f.label :please_fill_in_the_exact_name %></div>
  <div class="sign-control"><%= f.text_field :name, :autofocus => true ,:class=>'sign-control'  %></div>

  <div class="sign-control"><%= f.label :email %></div>
  <div class="sign-control"><%= f.email_field :email, :autofocus => true ,:class=>'sign-control' %></div>

  <div class="sign-control"><%= f.label :password %></div>
  <div class="sign-control"><%= f.password_field :password ,:class=>'sign-control' %></div>

  <div class="sign-control"><%= f.label :password_confirmation %></div>
  <div class="sign-control"><%= f.password_field :password_confirmation , :class=>'sign-control' %></div>

  <div class="sign-control"><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
